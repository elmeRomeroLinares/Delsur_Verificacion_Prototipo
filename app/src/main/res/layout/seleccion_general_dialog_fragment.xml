<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/general_dialog_fragment_recycler_view"
        android:layout_width="200dp"
        android:layout_height="450dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/seleccionar_dialog_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar_string"
        app:layout_constraintEnd_toEndOf="@+id/general_dialog_fragment_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/general_dialog_fragment_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/general_dialog_fragment_recycler_view" />

    <Button
        android:id="@+id/cancelar_dialog_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelar_string"
        app:layout_constraintEnd_toEndOf="@+id/seleccionar_dialog_fragment_button"
        app:layout_constraintStart_toStartOf="@+id/seleccionar_dialog_fragment_button"
        app:layout_constraintTop_toBottomOf="@+id/seleccionar_dialog_fragment_button" />

</androidx.constraintlayout.widget.ConstraintLayout>